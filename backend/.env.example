# 项目名称
PROJECT_NAME=远程下载服务

# API前缀
API_PREFIX=/api/v1

# 允许的跨域请求来源
CORS_ORIGINS=["http://localhost:8848", "http://127.0.0.1:8848"]

# 最大并发下载数
MAX_CONCURRENT_DOWNLOADS=5

# 下载块大小（字节）
CHUNK_SIZE=1048576  # 1MB

# 下载重试次数
RETRY_ATTEMPTS=5

# BT监听端口
BT_LISTEN_PORT=6881

# BT做种时间（秒）
BT_SEED_TIME=3600  # 1小时
